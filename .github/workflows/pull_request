name: Pull Requests

on: pull_request

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-node@v4
        with:
          node-version-file: .nvmrc
          cache: "yarn"
      - name: Install Dependencies
        run: yarn --frozen-lockfile
      - name: Build for Production
        run: yarn build

  unit-tests:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-node@v4
        with:
          node-version-file: .nvmrc
          cache: "yarn"
      - name: Install Dependencies
        run: yarn --frozen-lockfile
      - name: Run Unit Tests
        run: yarn test
